{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@polkadot/api/augment": [
        "node_modules/@polymeshassociation/polymesh-types/polkadot/augment-api"
      ],
      "@polkadot/types/augment": [
        "node_modules/@polymeshassociation/polymesh-types/polkadot/augment-types"
      ],
      "@polkadot/types/lookup": [
        "node_modules/@polymeshassociation/polymesh-types/polkadot/types-lookup"
      ]
    },
    "useUnknownInCatchVariables": false,
    "noImplicitOverride": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["dist", "node_modules", "sandbox.ts", "test.ts", "src-temp"]
}
