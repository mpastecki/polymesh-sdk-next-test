{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "polymesh-types/*": ["node_modules/@polymeshassociation/polymesh-types/generated-types/*"],
      "@polkadot/api/augment": [
        "node_modules/@polymeshassociation/polymesh-types/generated-types/augment-api"
      ],
      "@polkadot/types/augment": [
        "node_modules/@polymeshassociation/polymesh-types/generated-types/augment-types"
      ],
      "@polkadot/types/lookup": [
        "node_modules/@polymeshassociation/polymesh-types/generated-types/types-lookup"
      ]
    },
    "plugins": [
      {
        "transform": "@ovos-media/ts-transform-paths",
        "exclude": ["*"]
      }
    ],
    "useUnknownInCatchVariables": false,
    "noImplicitOverride": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "typeRoots": ["./node_modules/@types", "./src/typings"]
  },
  "exclude": ["dist", "node_modules", "sandbox.ts", "test.ts", "src-temp"]
}
